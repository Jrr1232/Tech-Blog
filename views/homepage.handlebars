<link rel="stylesheet" href="css/jass.css">
{{#each blogs}}
<button class="accordion">
    <div id="title">{{title}}</div>
    <div id="posted-date">Posted By: {{user.username}} on {{datePosted}}</div>
</button>
<div class="panel">
    <p>{{text}}</p>
</div>
{{/each}}
{{#if logged_in}}
<form class="new-comment-form">
    <textarea id="new-comment" maxlength="500"></textarea>
    <button class="add-comment-btn" type="submit">Leave a Comment</button>
</form>
{{/if}}
<div class="login-card">
    <h2 class="login-title">Signup</h2>
    <form class="form signup-form">
        <div class="form-group">
            <input class="form-input" type="text" id="username-signup" placeholder="Signup" />
            <div class="border"></div>
        </div>
        <div class="form-group">

            <input class="form-input" type="text" id="email-signup" placeholder="Email" />
            <div class="border"></div>
        </div>
        <div class="form-group">

            <input class="form-input" type="password" id="password-signup" placeholder="Password" />
            <div class="border"></div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary signup" type="submit">signup</button>
        </div>
        <div>
        </div>
    </form>
</div>
<div id="already-logged">
    <p>Already a member? <a href="/login">Log In</a></p>
</div>
<div>

</div>
<div>

</div>

<script src="/js/homepage.js"></script>
<script src="/js/signup.js"></script>