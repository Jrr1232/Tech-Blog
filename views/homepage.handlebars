<link rel="stylesheet" href="css/jass.css">

{{#each blogs}}
{{comment.text}}
<button class="accordion">
    <div id="title">{{title}}</div>
    <div id="posted-date">Posted By: {{user.username}} on {{datePosted}}</div>
</button>
<div class="panel">
    <div id="blog-text">
        <p>{{text}}</p>
    </div>
    <form class="new-comment-form">
        <textarea class="new-comment" maxlength="500" data-blogid="{{id}}"></textarea>
        <button class="add-comment-btn" data-blogid="{{id}}" type="submit">Leave a Comment</button>
    </form>
</div>
<div>
    <ul class="comments-list">

        {{#each comments}}
        <div class="comment">
            <div class="comment-header"></div>
            <li>-{{text}}</li>
            <br />
            Posted By: {{username}}

        </div>
        {{/each}}
        {{username}}
</div>

</ul>
</div>

{{/each}}

{{#unless logged_in}}
<div class="login-card">
    <h2 class="login-title">Signup</h2>
    <form class="form signup-form">
        <div class="form-group">
            <input class="form-input" type="text" id="username-signup" placeholder="Signup" />
            <div class="border"></div>
        </div>
        <div class="form-group">

            <input class="form-input" type="text" id="email-signup" placeholder="Email" />
            <div class="border"></div>
        </div>
        <div class="form-group">

            <input class="form-input" type="password" id="password-signup" placeholder="Password" />
            <div class="border"></div>
        </div>
        <div class="form-group">
            <button class="btn btn-primary signup" type="submit">signup</button>
        </div>
        <div>
        </div>
    </form>
</div>
<div id="already-logged">
    <p>Already a member? <a href="/login">Log In</a></p>
</div>
{{/unless}}
<div>
</div>
<div>
</div>
